<% content_for :page_title do %>
   <%= t("blog_entries") %><i class="icon-arrow-right"></i> <%= t(:new_blog_entry) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to t(:back), spree.admin_blog_entries_url, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @blog_entry %>

<%= form_for [:admin, @blog_entry] do |f| %>
  <%= render :partial => f %>
  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>